    <title>To Do List</title>  
</head>
<body>
    <div class="box" id="heading">
        <h1>Today</h1>
    </div>
    <div class="box">
            <% newItems.forEach(function(item) { %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name ="checkbox" value="<%= item %>" onchange="this.form.submit()">
                        <p><%= item %></p>
                    </div>
                </form>
            <% }) %>
        <form action="/mylist" method="POST" class="item">
            <input type="text" placeholder="What's Next" name="newItem" autocomplete="off">
            <button type="submit">+</button>
        </form>    
    </div>
    
    <div>
        <form action="/logout" method="POST">
            <button class="btn peach-gradient" type="submit">LogOut</button>
         </form>
    </div>
    
</body>
